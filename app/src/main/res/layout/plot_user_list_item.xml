<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.xzz.hxjdglpt.customview.CircleNetImageView
        android:id="@+id/plot_user_img"
        android:layout_width="55dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/plot_user_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/plot_user_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/plot_user_img"
        android:layout_marginTop="5dp"
        android:background="@mipmap/division" />

</RelativeLayout>