<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/lay_detail_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dj_dzb_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dj_dxz_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dj_dy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/dj_lddy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#c63e3b"
                android:padding="10dp"
                android:text="河下街道党建组织图"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="2px"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/shallow_balck" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@color/shallow_balck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/shallow_balck" />

                    <TextView
                        android:id="@+id/cdzznum"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#c63e3b"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="村级党组织\n0"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/shallow_balck" />

                    <TextView
                        android:id="@+id/zddzznum"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#c63e3b"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="驻地党组织\n0"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/shallow_balck" />

                    <TextView
                        android:id="@+id/lxdnum"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#c63e3b"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="两新党组织\n0"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:background="@color/shallow_balck" />

                    <com.xzz.hxjdglpt.customview.CustomViewPager
                        android:id="@+id/dj_cdzzb"
                        android:layout_width="60dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp">

                    </com.xzz.hxjdglpt.customview.CustomViewPager>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="2px"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="10dp"
                            android:background="@color/shallow_balck" />


                        <com.xzz.hxjdglpt.customview.CustomViewPager
                            android:id="@+id/dj_cdzb"
                            android:layout_width="55dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="10dp"></com.xzz.hxjdglpt.customview.CustomViewPager>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="2px"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/shallow_balck" />


                    <android.support.v4.view.ViewPager
                        android:id="@+id/dj_zddzz"
                        android:layout_width="60dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal">

                    </android.support.v4.view.ViewPager>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="2px"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/shallow_balck" />


                        <android.support.v4.view.ViewPager
                            android:id="@+id/dj_zddzb"
                            android:layout_width="55dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center_horizontal"></android.support.v4.view.ViewPager>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="2px"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="1px"
                        android:background="@color/shallow_balck" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginLeft="33dp"
                        android:layout_marginRight="33dp"
                        android:background="@color/shallow_balck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/shallow_balck" />

                            <TextView
                                android:id="@+id/fgqynum"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="#c63e3b"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="非公企业组织\n0"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="2px"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/shallow_balck" />

                                <android.support.v4.view.ViewPager
                                    android:id="@+id/dj_fgqyzz"
                                    android:layout_width="55dp"
                                    android:layout_height="180dp"
                                    android:layout_gravity="center_horizontal"></android.support.v4.view.ViewPager>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="2px"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="1px"
                                android:background="@color/shallow_balck" />

                            <TextView
                                android:id="@+id/shttnum"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="#c63e3b"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="社会团体组织\n0"
                                android:textColor="@color/white" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="2px"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/shallow_balck" />

                                <android.support.v4.view.ViewPager
                                    android:id="@+id/dj_shtdzz"
                                    android:layout_width="55dp"
                                    android:layout_height="180dp"
                                    android:layout_gravity="center_horizontal"></android.support.v4.view.ViewPager>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>