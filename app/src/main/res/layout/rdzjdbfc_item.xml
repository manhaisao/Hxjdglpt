<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


    <com.xzz.hxjdglpt.customview.CircleNetImageView
        android:id="@+id/dbfc_img"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/dbfc_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/dbfc_img"
        android:layout_toRightOf="@id/dbfc_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp"/>


    <ImageView
        android:id="@+id/dbfc_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/division"/>

    <TextView
        android:id="@+id/dbfc_item_jj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/dbfc_img"
        android:layout_toRightOf="@id/dbfc_img"
        android:singleLine="true"
        android:textSize="12sp"/>

</RelativeLayout>