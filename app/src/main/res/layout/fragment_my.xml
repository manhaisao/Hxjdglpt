<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_color"
              android:orientation="vertical"
              tools:context="com.xzz.hxjdglpt.fragment.MyInfoFragment">

    <include
        layout="@layout/lay_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/myinfo_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/my_bj"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.xzz.hxjdglpt.customview.CircleNetImageView
                    android:id="@+id/myinfo_head_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    app:border_color="@color/white"
                    app:border_overlay="false"
                    app:border_width="2dp"/>

                <TextView
                    android:id="@+id/myinfo_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/myinfo_r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_ll"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/myinfo_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_safe"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/myinfo_iv1"
                    android:text="@string/account_safe"
                    android:textColor="@color/c_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myinfo_r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_r1"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/myinfo_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_modify_pwd"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/myinfo_iv2"
                    android:text="@string/modify_pwd"
                    android:textColor="@color/c_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myinfo_r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_r2"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/myinfo_iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_question"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/myinfo_iv3"
                    android:text="@string/my_question"
                    android:textColor="@color/c_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myinfo_r4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_r3"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/myinfo_iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_consult"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/myinfo_iv4"
                    android:text="@string/my_consult"
                    android:textColor="@color/c_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myinfo_r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_r4"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/myinfo_iv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_check_version"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/myinfo_iv5"
                    android:text="@string/update_version"
                    android:textColor="@color/c_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/myinfo_r6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_r5"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/myinfo_iv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/my_about_us"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/myinfo_iv6"
                    android:text="@string/about_us"
                    android:textColor="@color/c_text_color"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/arrow"/>
            </RelativeLayout>

            <Button
                android:id="@+id/myinfo_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/myinfo_r6"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/login_button"
                android:text="@string/exit"
                android:textColor="@color/white"
                android:textSize="16sp"></Button>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
