<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/login_bg"
                android:fitsSystemWindows="true"
                tools:context="com.xzz.hxjdglpt.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/login_icon"/>


        <AutoCompleteTextView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/login_left_right"
            android:layout_marginRight="@dimen/login_left_right"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext_round"
            android:hint="@string/hint_email"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLength="30"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textSize="@dimen/login_input_size_1"/>


        <EditText
            android:id="@+id/pwd_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/login_left_right"
            android:layout_marginRight="@dimen/login_left_right"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_round"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:maxLength="30"
            android:padding="10dp"
            android:textSize="@dimen/login_input_size_1"/>


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_left_right"
            android:layout_marginRight="@dimen/login_left_right"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_corners_bg"
            android:text="@string/action_sign_in"
            android:textColor="@color/white"
            android:textSize="@dimen/login_button_size"/>


        <TextView
            android:id="@+id/to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/register_account"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/youke_tiyan"
        android:textColor="@color/white"
        android:textSize="@dimen/login_text_size"
        android:visibility="gone"/>
</RelativeLayout>
