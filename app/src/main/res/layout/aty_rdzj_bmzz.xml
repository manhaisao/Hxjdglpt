<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    tools:ignore="MergeRootFrame">

    <include
        android:id="@+id/rdzj_bmzz_title"
        layout="@layout/lay_detail_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rdzj_bmzz_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="河下街道人大工委工作职责"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:lineSpacingMultiplier ="1.5"
                android:text="(《中国人民共和国地方各级人民代表大会和地方各级人民政府组织法》第五十三条)"
                android:textColor="#8f8f94"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier ="1.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/rdzj_bmzz_content"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="河下街道人大工委主任职责"
                android:textColor="#000"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier ="1.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/rdzj_bmzz_content_3"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="河下街道人大工委办公室工作职责"
                android:textColor="#000"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:lineSpacingMultiplier ="1.5"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/rdzj_bmzz_content_4"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>