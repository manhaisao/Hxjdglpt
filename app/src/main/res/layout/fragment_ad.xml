<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/fragment_vp_common"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/point3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/unselected_point" />

    <ImageView
        android:id="@+id/point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/point3"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/point3"
        android:background="@mipmap/unselected_point" />

    <ImageView
        android:id="@+id/point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/point2"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/point2"
        android:background="@mipmap/selected_point" />

    <ImageView
        android:id="@+id/point4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/point3"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/point3"
        android:background="@mipmap/unselected_point" />

    <ImageView
        android:id="@+id/point5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/point4"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/point4"
        android:background="@mipmap/unselected_point" />

</RelativeLayout>