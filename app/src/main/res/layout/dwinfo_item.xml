<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="@string/base_info_1"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/cityinfo_d_t_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/cityinfo_d_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityinfo_d_t_name" />

        <TextView
            android:id="@+id/cityinfo_d_t_cun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_t_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="点位名称：" />

        <TextView
            android:id="@+id/cityinfo_d_cun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityinfo_d_t_cun" />

        <TextView
            android:id="@+id/cityinfo_d_t_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_t_cun"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="所属村居：" />

        <TextView
            android:id="@+id/cityinfo_d_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_cun"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityinfo_d_t_grid" />


        <TextView
            android:id="@+id/cityinfo_d_t_dy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_t_grid"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="详细地址：" />

        <TextView
            android:id="@+id/cityinfo_d_dy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_grid"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityinfo_d_t_dy" />

        <TextView
            android:id="@+id/cityinfo_d_t_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_t_dy"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="联系人：" />

        <TextView
            android:id="@+id/cityinfo_d_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_dy"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityinfo_d_t_phone" />


        <TextView
            android:id="@+id/cityinfo_d_t_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_t_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="联系电话：" />

        <TextView
            android:id="@+id/cityinfo_d_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityinfo_d_username"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cityinfo_d_t_phone" />
    </RelativeLayout>
</LinearLayout>