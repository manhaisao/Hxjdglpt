<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/lay_detail_title"></include>

    <include
        layout="@layout/info_detail_image_show"
        android:visibility="gone"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/base_info_1"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/management_t_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/m_name" />

                <TextView
                    android:id="@+id/management_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_name" />

                <TextView
                    android:id="@+id/management_t_cun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/have_cun_"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_cun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_name"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_cun"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_t_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_cun"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/have_grid_" />

                <TextView
                    android:id="@+id/management_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_cun"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_grid" />

                <TextView
                    android:id="@+id/management_t_gtlx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_grid"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/gtlx"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_gtlx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_grid"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_gtlx"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_t_fr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_gtlx"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="经营者：" />

                <TextView
                    android:id="@+id/management_fr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_gtlx"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_fr" />

                <TextView
                    android:id="@+id/management_t_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_fr"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/lx_phone_" />

                <TextView
                    android:id="@+id/management_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_fr"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_phone" />

                <TextView
                    android:id="@+id/company_t_zcsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_phone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="成立日期：" />

                <TextView
                    android:id="@+id/company_zcsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_phone"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/company_t_zcsj" />

                <TextView
                    android:id="@+id/management_t_zgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_zcsj"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/zg_num"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_zgs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_zcsj"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_zgs"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/management_t_jyfw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_zgs"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/jy_area" />

                <TextView
                    android:id="@+id/management_jyfw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_zgs"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_jyfw" />

                <TextView
                    android:id="@+id/company_t_jyaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_jyfw"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/jyaddress" />

                <TextView
                    android:id="@+id/management_jyaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_jyfw"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/company_t_jyaddress" />

                <TextView
                    android:id="@+id/company_t_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_jyaddress"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="属地单位：" />

                <TextView
                    android:id="@+id/company_danwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_jyaddress"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/company_t_wgzrr" />

                <TextView
                    android:id="@+id/company_t_wgzrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_danwei"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="网格责任人：" />

                <TextView
                    android:id="@+id/company_wgzrr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_danwei"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/company_t_wgzrr" />

                <TextView
                    android:id="@+id/management_t_wgphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_t_wgzrr"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/lx_phone_" />

                <TextView
                    android:id="@+id/management_wgphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/company_wgzrr"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_wgphone" />

                <TextView
                    android:id="@+id/management_t_rjgz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_jyfw"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/rjgz"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_rjgz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_jyfw"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_rjgz"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_t_isns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_t_rjgz"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/isns"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/management_isns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/management_rjgz"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/management_t_isns"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/yyzz_"
                android:textSize="16sp"
                android:visibility="visible" />

            <GridView
                android:id="@+id/management_yyzz"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:columnWidth="80dp"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:numColumns="5"
                android:paddingLeft="3dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="3dp"
                android:visibility="visible"></GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/nsqk_"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/management_nsqk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="@string/bz_"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/management_bz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
