<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >
    <include layout="@layout/top_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/lowgray"
            >
            <RelativeLayout
                android:id="@+id/sxgz_content_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/sxgz_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="5"
                    android:textColor="@color/t_color"
                    android:text="@string/ls_workstation"
                    ></TextView>
                <Button
                    android:id="@+id/sxgz_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/sxgz_content"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:drawablePadding="-10dp"
                    android:drawableRight="@mipmap/all_arrow"
                    android:text="展开"
                    android:textColor="#b4b4b4"
                    android:textSize="12sp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lowgray"
                android:layout_marginTop="@dimen/margin_10"
                >
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/title_bg"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bzgzz"
                    android:textSize="@dimen/title_size"
                    android:padding="@dimen/padding_5"
                    android:background="@color/white"
                    android:layout_margin="0.5dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <com.xzz.hxjdglpt.customview.NoScrollRecyclerView
                android:id="@+id/rv_workstation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_5"
                android:paddingRight="@dimen/padding_5"
                android:background="@color/white"
                >
            </com.xzz.hxjdglpt.customview.NoScrollRecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>