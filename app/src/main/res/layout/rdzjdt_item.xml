<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


    <TextView
        android:id="@+id/rddt_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/rddt_item_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rddt_item_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/rddt_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rddt_item_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/rddt_item_user"
        android:textSize="12sp"/>


    <ImageView
        android:id="@+id/rddt_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rddt_item_user"
        android:layout_marginTop="10dp"
        android:background="@mipmap/division"/>

</RelativeLayout>