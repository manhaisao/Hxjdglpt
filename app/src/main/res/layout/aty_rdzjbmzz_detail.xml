<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/lay_detail_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.xzz.hxjdglpt.customview.CircleNetImageView
                android:id="@+id/rdzjdbfc_head_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:border_color="@color/white"
                app:border_overlay="false"
                app:border_width="2dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="详细信息"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/dbml_t_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/name_" />

                <TextView
                    android:id="@+id/dbml_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_name" />
                <TextView
                    android:id="@+id/dbml_t_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/sex" />

                <TextView
                    android:id="@+id/dbml_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_name"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_sex" />

                <TextView
                    android:id="@+id/dbml_t_csrq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_sex"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="出生日期：" />

                <TextView
                    android:id="@+id/dbml_csrq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_sex"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_csrq" />
                <TextView
                    android:id="@+id/dbml_t_xl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_csrq"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="学历：" />

                <TextView
                    android:id="@+id/dbml_xl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_csrq"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_xl" />
                <TextView
                    android:id="@+id/dbml_t_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_xl"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="党派：" />

                <TextView
                    android:id="@+id/dbml_dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_xl"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_dp" />
                <TextView
                    android:id="@+id/dbml_t_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/dw_zw_" />

                <TextView
                    android:id="@+id/dbml_dw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_dw" />

                <TextView
                    android:id="@+id/dbml_t_xq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_dw"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/xq_" />

                <TextView
                    android:id="@+id/dbml_xq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_dw"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_xq" />

                <TextView
                    android:id="@+id/dbml_t_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_sex"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/age_"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/dbml_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_sex"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_age"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/dbml_t_jc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_xq"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/dbjc_" />

                <TextView
                    android:id="@+id/dbml_jc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_xq"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_jc" />

                <TextView
                    android:id="@+id/dbml_t_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_t_jc"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/lx_phone_" />

                <TextView
                    android:id="@+id/dbml_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/dbml_jc"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/dbml_t_phone"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
